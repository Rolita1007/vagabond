<%= link_to "Back to Users", profiles_path %> <br>
<div class="flex-container">
<div class="user">
    <%= image_tag @user.picture, :class => "image" %>
        <div class="user-info">
                <%= @user.name %> @<%= @user.username %>
            </p>
            <p>Hometown:
                <%= @user.hometown %>
            </p>
            <p>User since:
                <%= @user.created_at.to_s(:long) %>
            </p>
        </div>
    <%= button_to "Delete User", profile_path,
                            method: :delete, 
                            data: {
                                :'sweet-alert-confirm' => 'Are you sure you want to delete this post?',
                                :'confirm-button-text' => 'Yes.',
                                :'cancel-button-text' => 'Cancel.',
                                :'confirm-button-color' => '#FF0000',
                                :'sweet-alert-type' => 'warning'
                                } %>

    <%= link_to "Edit User", edit_profile_path(@user) %>
</div>

<div class="user-content">
    <% @user.posts.each do |post| %>
        <div class="content">
            <h2><%= post.city.name %></h2>
            <%= post.content %> 
            </div>
        <% end %>
</div>
</div>